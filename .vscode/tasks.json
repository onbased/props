{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runserver",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "source ${workspaceFolder}/app.env.bash 2>/dev/null; ${workspaceFolder}/src/manage.py runserver 0.0.0.0:8000",
            "problemMatcher": [],
        },
        {
            "label": "test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "source ${workspaceFolder}/app.env.bash 2>/dev/null; ${workspaceFolder}/src/manage.py test",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "coverage",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "source ${workspaceFolder}/app.env.bash 2>/dev/null; ${workspaceRoot}/src/manage.py coverage",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "lint",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "source ${workspaceFolder}/app.env.bash 2>/dev/null; ${workspaceFolder}/src/manage.py lint",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make/migrate",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "source ${workspaceFolder}/app.env.bash 2>/dev/null; ${workspaceFolder}/src/manage.py makemigrations && ${workspaceFolder}/src/manage.py migrate",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "make/cmsg",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command": "source ${workspaceFolder}/app.env.bash 2>/dev/null; ${workspaceFolder}/src/manage.py makemessages && ${workspaceFolder}/src/manage.py compilemessages",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "exporthtml",
            "type": "shell",
            "options": {
                    "cwd":"${workspaceFolder}/src",
                    "statusbar": {
                        "hide": true
                    }
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command":"mjml ${fileDirname}/${fileBasenameNoExtension}.mjml -o ${fileDirname}/${fileBasenameNoExtension}.html --config.minify true",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
